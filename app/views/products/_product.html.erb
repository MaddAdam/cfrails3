

<% cache product do %>

<div class="col-sm-6 col-lg-6 col-md-6">
  <div class="thumbnail">


      <%= link_to(image_tag(product.image_url), product)%>
      <div class="caption">
        <h4 class="pull-right">$<%= (product.price / 100.0 ) %></h4>
        <h4><%= link_to product.name, product %></h4>
        <p><%= product.description %></p>

        <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> </p>

</div>
  </div>
</div>
<% end %>
